    "version": "0.2.0",
    "configurations": [
        {
            "name": "release",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/release/vkquake",
            "args": [ "-basedir", "${env:QUAKE_DIR}" ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "release"
        },
        {
            "name": "debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/vkquake",
            "args": [ "-basedir", "${env:QUAKE_DIR}" ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "debug"
        }
    ]
}