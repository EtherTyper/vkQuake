{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug",
            "type": "shell",
            "command": "meson build/debug -Dbuildtype=debug && ninja -C build/debug",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "release",
            "type": "shell",
            "command": "meson build/release -Dbuildtype=release && ninja -C build/release",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "sanitize",
            "type": "shell",
            "command": [ "CC=clang",
                "CFLAGS=\"-fsanitize=address -fsanitize=undefined\"",
                "LDFLAGS=\"-fsanitize=address -fsanitize=undefined\"",
                "meson build/sanitize -Dbuildtype=debug && ninja -C build/sanitize" 
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf build",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }        
    ]
}